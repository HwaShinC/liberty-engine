#!/usr/bin/env node

/**
 * This script is used for reinstall the Wiki, keeping its settings.
 * It would be useful in development.
 */

'use strict';

const models = require('../lib/models');
const inquirer = require('inquirer');

(async () => {
  try {
    const answers = await inquirer.prompt([
      {
        type: 'input',
        name: 'adminUsername',
        message: 'Wiki admin username',
      },
      {
        type: 'password',
        name: 'adminPassword',
        message: 'Wiki admin password',
      },
    ]);
    await models.initialize();
    await models.install({
      wikiName: models.Setting.get('wikiName'),
      domain: models.Setting.get('domain'),
      adminUsername: answers.adminUsername,
      adminPassword: answers.adminPassword,
      frontPageName: models.Setting.get('frontPage'),
    });
    await models.sequelize.query(`
      ALTER TABLE articleSearch
      DROP INDEX article_search_content,
      ADD FULLTEXT INDEX article_search_content (content ASC)  COMMENT 'parser "TokenBigramIgnoreBlankSplitSymbolAlphaDigixt"'
    `);
    await models.initialize();
    process.exit(0);
  } catch (e) {
    console.log(e);
    process.exit(-1);
  }
})();
